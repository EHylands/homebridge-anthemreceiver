{
  "pluginAlias": "AnthemReceiver",
  "pluginType": "platform",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "Host":{
        "title":"Host",
        "type":"string",
        "required": true
      },
      "Port":{
        "title":"Port",
        "type": "integer",
        "required": true,
        "default" : 14999
      },
      "Zone1":{
        "title": "Zone 1",
        "type": "object",
        "properties":{
          "Active":{
            "title": "Power/Input Accessory (HomeKit external television accessory)",
