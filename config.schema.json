{
  "pluginAlias": "AnthemReceiver",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "Host":{
        "title":"Host",
        "type":"string",
        "required": true
      },
      "Port":{
        "title":"Port",
        "type": "integer",
        "required": true,
        "default" : 14999,
        "maximum": 65535
      },
      "PanelBrightness":{
        "title": "Front Panel Brightness",
        "type": "boolean",
        "default": true,
        "required": true
      },
      "Zone1":{
        "title": "Zone 1",
        "type": "object",
        "properties":{
          "Active":{
            "title": "Enable Zone 1 Power/Input",
            "type": "boolean",
            "default": true
          },
          "Name": {
            "title": "Name:",
            "type": "string",
            "required": false,
            "placeholder": "Zone 1"
          },
          "Power": {
            "title": "Power",
            "type": "boolean",
            "default": true
          },
          "Mute": {
            "title": "Mute",
            "type": "boolean",
            "default": true
          },
          "Input": {
            "title": "Input - (Cycle current active input)",
            "type": "boolean",
            "default": true
          },
          "ALM": {
            "title": "Audio Listenning Mode - (Cycle active input current audio mode)",
            "type": "boolean",
            "default": true,
            "description": ""
          },
          "ARC": {
            "title": "ARC - (Toggle ARC status for active input, ARC must be configured)",
            "type": "boolean",
            "default": true
          },
          "Volume": {
            "title": "Volume",
            "type": "boolean",
            "default": true
          }
        }
      },
      "Zone2":{
        "title": "Zone 2",
        "type": "object",
        "properties":{
          "Active":{
            "title": "Enable Zone 2 Power/Input",
            "type": "boolean",
            "default": false
          },
          "Name": {
            "title": "Name:",
            "type": "string",
            "required": false,
            "placeholder": "Zone 2"
          },
          "Power": {
            "title": "Power",
            "type": "boolean",
            "default": false
          },
          "Mute": {
            "title": "Mute",
            "type": "boolean",
            "default": false
          },
          "Input": {
            "title": "Input - (Cycle current active input)",
            "type": "boolean",
            "default": false
          },
          "Volume": {
            "title": "Volume",
            "type": "boolean",
            "default": false
          }
        }
      }     
    }
  },
  "layout": [
    {
      "title": "Anthem Receiver Plugin Configuration",
      "type": "fieldset",
      "expandable": false,
      "items":[
        {
          "type": "help",
          "helpvalue": "<em class='primary-text'> Please read: </em> <a href='https://github.com/EHylands/homebridge-anthemreceiver'> Homebridge-AnthemReceiver</a>"
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            "Host",
            "Port"
          ]
        },
        "PanelBrightness"
      ]
    },
    {
      "title": "Zone 1 - Platform Accessories",
      "type": "fieldset",
      "expandable": true,
      "expanded": true,
      "items": [
        "Zone1.Power",
        "Zone1.Mute",
        "Zone1.Volume",
        "Zone1.Input",
        "Zone1.ALM",
        "Zone1.ARC"
      ]
    },
    {
      "title": "Zone 1 - Power/Input Accessory",
      "type": "fieldset",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<em class='primary-text'>External HomeKit Televison Accessory to be manually added in Home App</em>"
        },
        "Zone1.Active",
        "Zone1.Name"
      ]
    },
    {
      "title": "Zone 2 - Platform Accessories",
      "type": "fieldset",
      "expandable": true,
      "items": [
        "Zone2.Power",
        "Zone2.Mute",
        "Zone2.Volume",
        "Zone2.Input"
      ]
    },
    {
      "title": "Zone 2 - Power/Input Accessory>",
      "type": "fieldset",
      "expandable": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<em class='primary-text'>External HomeKit Televison Accessory to be manually added in Home App</em>"
        },
        "Zone2.Active",
        "Zone2.Name"
      ]
    }
  ]
}