            "type": "boolean",
            "default": true
          },
          "Power": {
            "title": "Power Accessory",
            "type": "boolean",
            "default": true
          },
          "Mute": {
            "title": "Mute Accessory",
            "type": "boolean",
            "default": true
          },
          "Input": {
            "title": "Input Accessory - (Cycle current active input)",
            "type": "boolean",
            "default": true
          },
          "ALM": {
            "title": "Audio Listenning Mode Accessory - (Cycle active input current audio mode)",
            "type": "boolean",
            "default": true,
